<apex:page controller="regionexample">
    <apex:form >
        <apex:pageBlock id="pb">
            <apex:pageBlockSection columns="1">
            <apex:pageBlockSectionItem >
                <apex:outputPanel >
                    <apex:outputLabel value="Customer Number"/>
                </apex:outputPanel>
                <apex:outputPanel >
                <apex:actionRegion >
                    <apex:inputText value="{!cusNo}"/>&nbsp;&nbsp;
                    <apex:commandButton action="{!retrievecustRecords}" value="Search"  rerender="pb"/>
                    </apex:actionRegion>
                </apex:outputPanel>
                </apex:pageBlockSectionItem>
                <apex:inputField value="{!cObj.Last_Name__c}"/>
                <apex:inputField value="{!cObj.Email_Address__c}"/>
                <apex:inputField value="{!cObj.Phone_Number__c}"/>               
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>