<aura:component  controller="datatableClass" implements="flexipage:availableForRecordHome,force:hasRecordId" access="global" >
   
    <aura:attribute name="saveDraftValues" type="Object"/>
    <aura:attribute name="data" type="Object"/>
    <aura:attribute name="columns" type="List"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <div class="slds-p-around_medium">
        <lightning:datatable aura:id="accountTable"
                keyField="id"
                data="{! v.data }"
                columns="{! v.columns }"
                hideCheckboxColumn="false"
                onrowselection ="{!c.doSelectionrecord}"
                 onrowaction = "{!c.handleRowaction}"  
                  onsave = "{!c.handlesave}"           
                /><br></br><br></br>
        <lightning:buttonGroup >
		<lightning:button variant="neutral" label="Refresh" />
		<lightning:button variant="neutral" label="Edit" />
		<lightning:button variant="neutral" label="Save" />
		<lightning:buttonMenu alternativeText="Show menu" class="slds-button_last">
			<lightning:menuItem label="Menu Item One" value="item1" />
			<lightning:menuItem label="Menu Item Two" value="item2" />
			<lightning:menuItem label="Menu Item Three" value="item3" />
		</lightning:buttonMenu>
	</lightning:buttonGroup>
    </div>
</aura:component>