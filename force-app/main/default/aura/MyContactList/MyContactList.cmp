<aura:component controller= "AccountDetailController" implements="flexipage:availableForRecordHome,force:hasRecordId" access="global" >
    <aura:attribute name="lstOfContacts" type="List"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <div class="slds-p-around_small">
    <aura:iteration items="{!v.lstOfContacts}" var="contactObj">
       <lightning:card title="{!v.contactObj.LastName}" footer="{!contactObj.Phone}" iconName="standard:contact">
        <p class="slds-p-horizontal_small">
        {!contactObj.LastName} {!contactObj.FirstName}<br/>{!contactObj.Phone}<br/>
      </p>
           </lightning:card>
    </aura:iteration>
        </div>
</aura:component>